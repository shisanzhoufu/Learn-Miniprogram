page {
  padding-bottom: 90rpx;
}
.detail_swiper swiper {
  height: 70vw;
  text-align: center;
}
.detail_swiper swiper .swiper-image {
  width: 60%;
}
.goods_price {
  color: var(--themeColor);
  padding: 15rpx;
  font-weight: 600;
  font-size: 32rpx;
}
.goods_name_row {
  padding: 15rpx 0 ;
  display: flex;
}
.goods_name_row .goods_name {
  flex: 5;
  color: #000000;
  font-size: 30rpx;
  border-right: 1rpx solid #000;
  padding: 5rpx 0;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods_name_row .goods_collect {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.goods_name_row .goods_collect .icon-shoucang1 {
  color: var(--themeColor);
}
.goods_info .goods_info_title {
  color: var(--themeColor);
  padding: 15rpx;
  font-weight: 600;
  font-size: 32rpx;
  border-bottom: 1rpx solid #000000;
}
.buttom_tool {
  width: 100%;
  display: flex;
  position: fixed;
  justify-content: space-around;
  height: 90rpx;
  bottom: 0;
  left: 0;
}
.buttom_tool .tool_item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  font-size: 24rpx;
  position: relative;
}
.buttom_tool .tool_item button {
  width: 100%;
  height: 100%;
  opacity: 0;
  position: absolute;
  left: 0;
  bottom: 0;
}
.buttom_tool .iconfont {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.buttom_tool .btn_cart {
  flex: 2;
  color: #fff;
  display: flex;
  justify-content: center;
  flex-direction: column;
  background-color: #ffb93a;
  align-items: center;
}
.buttom_tool .btn_buy {
  flex: 2;
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f8554d;
}
