.first_tab .goods_wrap {
  display: flex;
  border-bottom: 2rpx solid #ccc;
}
.first_tab .goods_wrap .goods_img_wrap {
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 2;
}
.first_tab .goods_wrap .goods_img_wrap image {
  width: 70%;
}
.first_tab .goods_wrap .goods_content_wrap {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.first_tab .goods_wrap .goods_content_wrap .goods_title {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.first_tab .goods_wrap .goods_content_wrap .goods_price {
  color: var(--themeColor);
  font-size: 32rpx;
}
