page {
  background-color: #EBECE7;
}
.collect_main .collect_title {
  padding: 40rpx 0;
}
.collect_main .collect_title .collect_tips {
  border: 1rpx solid #ccc;
  background-color: #fff;
  padding: 10rpx;
  margin-left: 25rpx;
}
.collect_main .collect_title .active {
  border: 1rpx solid var(--themeColor);
  color: var(--themeColor);
}
.collect_main .collect_cotent .goods_wrap {
  background-color: #fff;
  display: flex;
  border-bottom: 2rpx solid #ccc;
}
.collect_main .collect_cotent .goods_wrap .goods_img_wrap {
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 2;
}
.collect_main .collect_cotent .goods_wrap .goods_img_wrap image {
  width: 70%;
}
.collect_main .collect_cotent .goods_wrap .goods_content_wrap {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.collect_main .collect_cotent .goods_wrap .goods_content_wrap .goods_title {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.collect_main .collect_cotent .goods_wrap .goods_content_wrap .goods_price {
  color: var(--themeColor);
  font-size: 32rpx;
}
